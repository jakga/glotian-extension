{
  "name": "glotian-extension",
  "version": "1.0.0",
  "description": "Glotian Chrome Extension - AI-powered language learning while browsing. Built for Google Chrome Built-in AI Challenge 2025.",
  "type": "module",
  "author": "Glotian",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/YOUR_USERNAME/glotian-extension.git"
  },
  "keywords": [
    "chrome-extension",
    "language-learning",
    "chrome-ai",
    "translator",
    "flashcards",
    "ai",
    "education"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,md}\"",
    "check-types": "tsc --noEmit",
    "package": "npm run build && node scripts/package.js",
    "zip": "npm run build && cd dist-prod && zip -r ../glotian-extension-$npm_package_version.zip ."
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.57.0",
    "dexie": "^4.2.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.2.0",
    "@types/chrome": "^0.0.254",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@types/uuid": "^9.0.7",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "postcss": "^8.5.6",
    "prettier": "^3.1.1",
    "tailwindcss": "^3.4.18",
    "ts-jest": "^29.1.1",
    "typescript": "^5.9.2",
    "vite": "^5.0.10"
  }
}
